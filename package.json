{
    "name": "k-tech_kintone_javascript",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "generate:fields": "node src/BOX/PL_dashboard/scripts/generate-fields.js",
        "prebuild": "npm run generate:fields",
        "build": "npm run build:desktop && npm run build:mobile",
        "build:desktop": "cross-env BUILD_TARGET=desktop vite build",
        "build:mobile": "cross-env BUILD_TARGET=mobile vite build",
        "watch": "vite build --watch",
        "upload": "sh -c 'for f in customize-manifest-app*.json; do echo \"Uploading $f\"; dotenv kintone-customize-uploader \"$f\" || exit $?; done'",
        "upload:app43": "dotenv kintone-customize-uploader customize-manifest-app43.json",
        "deploy": "npm run build && npm run upload",
        "deploy:app43": "npm run build && npm run upload:app43",
        "auto:deploy:app43": "chokidar \"src/**/*.ts\" \"src/**/*.css\" --ignore \"src/**/generated/**\" -c \"npm run deploy:app43\"",
        "watch:vite": "vite build --watch",
        "watch:upload:app43": "chokidar \"dist/**/*.js\" -c \"npm run upload:app43\"",
        "dev:auto:app43": "npm-run-all --parallel watch:vite watch:upload:app43",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
        "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "type-check": "tsc --noEmit",
        "docs": "typedoc",
        "docs:watch": "typedoc --watch",
        "quality": "npm run lint && npm run format:check && npm run type-check && npm run test",
        "prepare": "husky"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kent2980/kintone_PL-.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "commonjs",
    "bugs": {
        "url": "https://github.com/kent2980/kintone_PL-/issues"
    },
    "homepage": "https://github.com/kent2980/kintone_PL-#readme",
    "devDependencies": {
        "@kintone/customize-uploader": "^9.0.0",
        "@kintone/dts-gen": "^9.0.0",
        "@types/datatables.net": "^1.10.28",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.10.0",
        "@typescript-eslint/eslint-plugin": "^8.46.3",
        "@typescript-eslint/parser": "^8.46.3",
        "chokidar-cli": "^3.0.0",
        "cross-env": "^10.1.0",
        "dotenv-cli": "^11.0.0",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "husky": "^9.1.7",
        "jest": "^30.2.0",
        "jest-environment-jsdom": "^30.2.0",
        "lint-staged": "^16.2.6",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.6.2",
        "ts-jest": "^29.4.5",
        "ts-morph": "^27.0.2",
        "ts-node": "^10.9.2",
        "typedoc": "^0.27.9",
        "typescript": "^5.9.3",
        "vite": "^6.4.1"
    },
    "dependencies": {
        "@types/dompurify": "^3.0.5",
        "@types/jquery": "^3.5.33",
        "chart.js": "^4.5.1",
        "chartjs-plugin-datalabels": "^2.2.0",
        "datatables.net": "^2.3.4",
        "datatables.net-buttons": "^3.2.5",
        "datatables.net-buttons-dt": "^3.2.5",
        "datatables.net-dt": "^2.3.4",
        "dayjs": "^1.11.19",
        "dompurify": "^3.3.0",
        "jquery": "^3.7.1",
        "xlsx": "^0.18.5"
    }
}
