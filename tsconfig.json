{
    // Visit https://aka.ms/tsconfig to read more about this file
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "allowJs": true,
        "checkJs": true,
        "outDir": "./dist",
        "typeRoots": ["./node_modules/@types"],
        "types": ["jest", "node"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "./**/*.js",
        "./**/*.ts",
        "*_fields.d.ts",
        "./src/BOX/PL_dashboard/__mocks__/**/*.d.ts",
        "./kintone.d.ts"
    ],
    "exclude": ["coverage"]
}
